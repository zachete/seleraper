{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "."
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
